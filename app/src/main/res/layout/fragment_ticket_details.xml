<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TicketDetails">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/linear_layout_borde"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/estado_se_background"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:paddingVertical="2dp"
            android:text="Estado"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="NOMBRE DE QUIEN REPORTA"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textNombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:width="270dp"
                android:height="40dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="start|center_vertical"
                android:maxWidth="270dp"
                android:maxHeight="40dp"
                android:minWidth="270dp"
                android:minHeight="40dp"
                android:text="Eduardo Dario Morales Zamora"
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFechaSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="FECHA Y HORA"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textFechaCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:width="110dp"
                android:height="40dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center_vertical"
                android:maxWidth="110dp"
                android:maxHeight="40dp"
                android:minWidth="110dp"
                android:minHeight="40dp"
                android:text="03/09/2024"
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAreaSubtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="ÁREA"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textAreaCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:width="110dp"
                    android:height="40dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_vertical"
                    android:maxWidth="110dp"
                    android:maxHeight="40dp"
                    android:minWidth="110dp"
                    android:minHeight="40dp"
                    android:text="Vigilancia"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textTipoSubtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="TIPO DE EQUIPO"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textTipoCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:width="110dp"
                    android:height="40dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_vertical"
                    android:maxWidth="110dp"
                    android:maxHeight="40dp"
                    android:minWidth="110dp"
                    android:minHeight="40dp"
                    android:text="PC"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textExtensionSubtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="NO. EXTENSIÓN"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textExtensionCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:width="110dp"
                    android:height="40dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_vertical"
                    android:maxWidth="110dp"
                    android:maxHeight="40dp"
                    android:minWidth="110dp"
                    android:minHeight="40dp"
                    android:text="002"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textCategoriaSubtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="CATEGORIA DE FALLA"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textCategoriaCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:width="110dp"
                    android:height="40dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center_vertical"
                    android:maxWidth="110dp"
                    android:maxHeight="40dp"
                    android:minWidth="110dp"
                    android:minHeight="40dp"
                    android:text="Falla de red"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMotivoSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="MOTIVO DEL REPORTE"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textMotivoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="start|top"
                android:maxWidth="250dp"
                android:maxHeight="40dp"
                android:minWidth="250dp"
                android:minHeight="40dp"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:text="Descripción del problema que presenta el usuario"
                android:textColor="#000000"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>